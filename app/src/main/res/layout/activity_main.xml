<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danuuu"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XII TJKT 3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/txtnama"
        app:layout_constraintEnd_toEndOf="@id/txtnama"
        app:layout_constraintStart_toStartOf="@id/txtnama"/>

    <TextView
        android:id="@+id/txtabsen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/txtkelas"
        app:layout_constraintEnd_toEndOf="@id/txtkelas"
        app:layout_constraintStart_toStartOf="@id/txtkelas"/>
    
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/txtabsen"/>



</androidx.constraintlayout.widget.ConstraintLayout>